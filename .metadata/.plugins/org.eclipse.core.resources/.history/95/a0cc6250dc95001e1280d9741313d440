package exercicios;

import java.util.Scanner;

public class Exercicio3 {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		
		int idade;
		
		System.out.println("Digite uma idade:");
		idade = leia.nextInt();
		
		while (idade > 0) {
			if (idade < 21) {
				System.out.println("Total de pessoas menores de 21 anos: ");
			} else if (idade > 50) {
				System.out.println("Total de pessoas maiores de 50 anos: ");
			}
	}
		System.out.println("Idade inv√°lida.");
	}
}
